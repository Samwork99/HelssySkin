{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
{% endblock %}

<!--Background_img-->
<section>
    <div id="intro" class="bg-image vh-100 justify-content-center d-flex"> 
      <img src="{{ asset('images/img_accueil.jpg') }}" alt="img_accueil"/>
    
    <!--Titre-->
          <h2>"Le meilleur pour votre peau !"</h2>

    <!--Carousel-->
      <div id="carouselExemple" class="carousel slide" data-ride="carousel" data-interval="3000">
        <ol class="carousel-indicators">
            <li data-target="#carouselExemple" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExemple" data-slide-to="1"></li>
            <li data-target="#carouselExemple" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <h5>Notre nouveauté<h5>
                <img src="/images/carousel_img_uno.jpg"class="d-block">
            </div>
            <div class="carousel-item">
                <h5>Notre coup de coeur <i class="fa-solid fa-heart" style="color:red"></i></h5>
                <img src="/images/carousel_img_2.jpg"class="d-block">
            </div>
            <div class="carousel-item">
                <h5>Notre exclusivité</h5>
                <img src="/images/carousel_img3.jpg"class="d-block">
            </div>
        </div>
        <a href="#carouselExemple" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a href="#carouselExemple" class="carousel-control-next" role="button" data-slide="next">
            <span class="sr-only">Next</span>
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
</div>

    <script>
        $('.carousel').carousel({
            pause: "null"
        })
    </script>
</section>