{% extends 'base.html.twig' %}

{% block title %}HelssySkin{% endblock %}

{% block header %}
{% include "header.html.twig" %}
{% endblock %}

{% block main %}
{# Background_img #}
    <div id="intro" class="bg-image vh-100 justify-content-center d-flex"> 
      <img src="{{ asset('images/img_accueil.jpg') }}" alt="img_accueil"/>
      </div>
    
    {# Titre #}
          <h2 class="best_skin">"Le meilleur pour votre peau !"</h2>

    {# Carousel #} 
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="{{ asset('images/carousel_img_uno.jpg') }}" class="d-block w-100" alt="first_img">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="carousel_title">Notre nouveauté</h5>
                <p class="carousel_para">Gommage aux grains de café pur mélangés aux huiles essentielles</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="{{ asset('/images/carousel_img_2.jpg') }}" class="d-block w-100" alt="Second-img">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="carousel_title">Notre coup de cœur ❤️</h5>
                <p class="carousel_para">Huile végétale de brahmi 100% bio</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="{{ asset('/images/carousel_img3.jpg') }}" class="d-block w-100" alt="Third_img">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="carousel_title class="carousel_title"">Notre exclusivité</h5>
                <p class="carousel_para">Sérum réparateur à base d'huile de figue de barbarie</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
{% endblock %}
