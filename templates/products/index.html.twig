{% extends 'base.html.twig' %}

{% block title %}Soins HSkin{% endblock %}

{% block main %}

<div class="container">
    <div id="container_products" class="row">
{% for product in products %}
    <div class="card">
        <img class="card-img-top" src="{{ asset('/images/products_img/' ~ product.image) }}" height="240" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{ product.name }}</h5> 
                <h6 class="card-price">{{ (product.price / 100) |number_format(2, ',', '.') }} â‚¬</h6>
                    <p class="card-text">{{ product.description|u.truncate(30, '...', false) }}</p>
        
        <div class="buttons d-flex justify-content-center" id="button_strap">
            <a href="{{ path('app_products_show' , { 'id' : product.id }) }}" class="btn btn-secondary">Voir</a>
            <a href="{{ path('cart_add', { 'id' : product.id }) }}" class="btn btn-primary">Ajouter au panier</a></div>
        </div>
    </div>
{% endfor %}
</div>
</div>
{% endblock %}
