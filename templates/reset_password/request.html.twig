{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe!{% endblock %}

{% block main %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialisez le mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Veuillez entrer votre adresse e-mail et nous vous enverrons un lien pour réinitaliser votre mot de passe.
            </small>
        </div>
        <button class="btn btn-primary">Envoi e-mail "réinitialisation du MDP"</button>
    {{ form_end(requestForm) }}
{% endblock %}
