{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
<body style="background-image:url(images/fleur_lotus_rose.jpg);background-size:cover">
<form method="post" class="mt-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
    {# Formulaire de connexion #}
    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
    <div class="row mt-5 mr-5 ml-5">
    <div class="col-md-6">
    <label for="inputEmail" style="font-style:italic">Votre email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br>
    <label for="inputPassword" style="font-style:italic">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
   
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
</form><br>
<a href="{{path('app_forgot_password_request')}}">Mot de passe oubli√©</a>
    </div>
 </div>
{% endblock %}
